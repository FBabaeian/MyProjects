@model IEnumerable<MyCms.Models.News>

@{
    ViewBag.Title = "صفحه خبرها";
}

@foreach (var item in Model)
{
<div class="col-sm-6 col-md-4">
	<div class="thumbnail">
		<img src="~/NewsImages/@item.ImageName" alt="تصویر خبر">
		<div class="caption">
			<h3>@item.NewsTitle</h3>
			
			<p><a href="/ClientNews/ShowNews/@item.NewsId" class="btn btn-primary btn-block" role="button"> نمایش خبر </a> </p>
		</div>
	</div>
</div>
}

