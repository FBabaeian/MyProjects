<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>سیستم مدیریت محتوا | @ViewBag.Title</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>


	<header class="container-fluid">
		<div class="navbar navbar-default navbar-fixed-top" style="background-color:blanchedalmond;">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="#">
						<img src="~/NewsImages/CMS-4.jpg" alt="لوگو" />
					</a>
					@*@Html.ActionLink(  new { area = "" }, new { @class = "navbar-brand" })*@
				</div>
				<div class="navbar-collapse collapse">
					<ul class="nav navbar-nav">
						<li>@Html.ActionLink("Home", "Index", "Home")</li>
						<li>@Html.ActionLink("About", "About", "Home")</li>
						<li>@Html.ActionLink("Contact", "Contact", "Home")</li>
					</ul>
					@Html.Partial("_LoginPartial")
				</div>
			</div>
		</div>
	</header>


	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<div class="footer text-center py-3">

				<a class="page-footer" href="#">
					<img src="~/NewsImages/CMS-4.jpg" alt="لوگو" />
				</a>
			</div>
			<!-- Copyright -->

		</footer>
		<!-- Footer -->
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>