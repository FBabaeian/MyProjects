@model IEnumerable<MyCms.Models.News>

@{
    ViewBag.Title = "Index";
}

<h2>صفحه اصلی</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.ImageName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.PageGroups.GroupTitle)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.NewsTitle)
		</th>

		<th>
			@Html.DisplayNameFor(model => model.NewsSeen)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.CreateDate)
		</th>
		<th></th>
	</tr>

@foreach (var item in Model) {
	<tr>
		<td>
			<img src="~/NewsImages/@item.ImageName"width="120"class="thumbnail">
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.PageGroups.GroupTitle)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.NewsTitle)
		</td>


		<td>
			@Html.DisplayFor(modelItem => item.NewsSeen)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.CreateDate)
		</td>
		<td>
			@Html.ActionLink("ویرایش", "Edit", new { id = item.NewsId }) |
			@Html.ActionLink("جزییات", "Details", new { id = item.NewsId }) |
			@Html.ActionLink("حذف", "Delete", new { id = item.NewsId })
		</td>
	</tr>
}

</table>
